<p id="notice"><%= notice %></p>

<h1>Friendships</h1>

<table>
    <div id="users">
<% @users = User.all %>
<% for user in @users %>
  <div class="user">
    <p>
      <strong><%=h user.email %></strong>
      <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
      



      <div class="clear"></div>
    </p>
  </div>
<% end %>
<%= link_to 'Destroy', friendship_path(user.friendships.first), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>  
<h2>Friends</h2>


  <thead>
    <tr>
      <th>User</th>
      <th>Friend</th>
      <th>Create</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>
        <td><%= friendship.user_id %></td>
        <td><%= friendship.friend_id %></td>
        <td><%= friendship.createdat %></td>
        <td><%= friendship.destroyat %></td>
        <td><%= link_to 'Show', friendship %></td>
        <td><%= link_to 'Edit', edit_friendship_path(friendship) %></td>
        <td><%= link_to 'Destroy', friendship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friendship', new_friendship_path %>
