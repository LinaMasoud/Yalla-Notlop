




<div class="agileinfo-heading" style="padding-bottom: 10px; padding-top: 10px">
    <h4> Groups: </h4>
  </div>
<div class="col-md-9">
<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr class="table-primary">
        <% if group.user == current_user %>
        <td><%= group.user.name %></td>
        <td><%= group.name %></td>
        <td><%= link_to 'Show', group %>
        <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
<% end %>
  </tbody>
</table>
</div>
<br>
<div class="text-center" style="padding-top: 5%">
<%= link_to 'New Group', new_group_path , class: "btn btn-danger btn-lg"%>
</div>